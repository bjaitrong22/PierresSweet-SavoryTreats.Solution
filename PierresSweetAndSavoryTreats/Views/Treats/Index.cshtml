@{
  Layout ="_Layout";
}

@using PierresSweetAndSavoryTreats.Models

<div class="container">
  <h1>Treats</h1>
  <hr>
  <br>

  @if (@Model.Count == 0)
  {
    <h3>No Sweet and Savory Treats have been added yet!</h3>
  }
  else
  {
    <ul>
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId})</li>
      }
    </ul>
  }
  <br>
  <p>@Html.ActionLink("Add new Treat", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>