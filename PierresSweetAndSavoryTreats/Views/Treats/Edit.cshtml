@{
  Layout="_Layout";
}

@model PierresSweetAndSavoryTreats.Models.Treat

<div class="container">
  <h2>Edit</h2>
  <hr />
  <br>
  
  <h4>Edit this Treat: @Html.DisplayFor(m => m.TreatName)?</h4>
  <p>@Html.ValidationMessageFor(m => m.TreatName,"", new {@class = "text-danger", @style = "font-weight:600"})</p>
  <p>@Html.ValidationMessageFor(m => m.Ingredients,"", new {@class = "text-danger", @style = "font-weight:600"})</p>
  <p>@Html.ValidationMessageFor(m => m.Description,"", new {@class = "text-danger", @style = "font-weight:600"})</p>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(m => m.TreatId)

    @Html.LabelFor(m => m.TreatName, "Treat Name: ")
    @Html.EditorFor(m => m.TreatName)

    @Html.LabelFor(m => m.Ingredients, "Ingredients: ")
    @Html.EditorFor(m => m.Ingredients)

    @Html.LabelFor(m => m.Description, "Description: ")
    @Html.EditorFor(m => m.Description)

    <input type="submit" value="Save" class="btn btn-primary" />

  }
  <hr />
  <br>
  <p>@Html.ActionLink("Manage Treats", "Index")</p>
</div>