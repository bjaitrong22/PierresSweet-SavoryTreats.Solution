@{
  Layout = "_Layout";
}

@using PierresSweetAndSavoryTreats.Models;

<div class="container">
  <h1>Flavors</h1>
  <hr />
  <br>

  @if (@Model.Count == 0)
  {
    <h3>No Sweet and Savory Flavors have been added yet!</h3>
  }
  else
  {
    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId})</li>
      }
    </ul>
  }
  <br>
  <p>@Html.ActionLink("Add New Flavor", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>